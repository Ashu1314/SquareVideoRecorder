<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/yellow_d" />
        </shape>
    </item>
    <!-- 默认时的背景图片-->
    <item>
        <shape>
            <solid android:color="@color/yellow" />

        </shape>

    </item>

</selector> 